<!DOCTYPE html>
<html>
<head>
    <title>Patients List</title>
</head>
<body>
    <h2>Patients List</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(patient => { %>
                <tr>
                    <td><%= patient.id %></td>
                    <td><%= patient.name %></td>
                    <td><%= patient.age %></td>
                    <td><%= patient.gender %></td>
                    <td>
                        <a href="/patients/<%= patient.id %>/records">View Medical Records</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/patients/add">Add New Patient</a>
</body>
</html>
